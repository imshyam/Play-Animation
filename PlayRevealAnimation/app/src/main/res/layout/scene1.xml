<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/viewCircle1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circular_view"/>
        <View
            android:id="@+id/viewCircle2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:background="@drawable/circular_view1"/>
        <View
            android:id="@+id/viewCircle3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_below="@id/viewCircle1"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circular_view2"/>
        <View
            android:id="@+id/viewCircle4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_below="@id/viewCircle1"
            android:layout_alignParentRight="true"
            android:background="@drawable/circular_view3"/>
    </RelativeLayout>

</LinearLayout>