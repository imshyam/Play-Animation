<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shyam.playrevealanimation" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main2"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewAnimation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ActivityTransitionRename"
            android:label="@string/title_activity_final"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:label="@string/title_activity_details"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ActivityTransition.DetailsActivityTransition"
            android:label="@string/title_activity_details"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Scene.SceneTransition"
            android:label="@string/title_activity_scene"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shyam.playrevealanimation.MainActivity" />
        </activity>
        <activity
            android:name=".ActivityTransition.ActivityTransitionMain"
            android:label="@string/title_activity_fade"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ViewTransition.ViewTransition"
            android:label="@string/title_activity_view_transition" >
        </activity>
        <activity
            android:name=".CircularReveal.CircularReveal"
            android:label="@string/title_activity_circular_reveal" >
        </activity>
    </application>

</manifest>
